---
const { title, description, img_src, link, alt, width, height } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex flex-col rounded-md">
  <a href={link}>
    <div class="flex flex-col gap-2"></div>
    <div class="bg-amber-50"></div>
    <Image src={img_src} alt={alt} width={width} height={height} />
    <h3 class="text-2xl font-serif text-slate-600">{title}</h3>
    <p class="text-sm lg:text-lg">{description}</p></a
  >
</div>
